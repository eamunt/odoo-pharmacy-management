<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="donhang_form_view" model="ir.ui.view">
            <field name="name">donhang.form.view</field>
            <field name="model">don.hang</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="ten_benhnhan" string="Họ tên" class="oe_edit_only"/>
                            <h1>
                                <field name="ten_benhnhan" placeholder="Nguyễn Văn A"/>
                            </h1>
                            <label for="dh_id" string="Đơn"/>
                            <h3>
                                <field name="dh_id"/>
                            </h3>

                            <label for="ngay"/>
                            <h3>
                                <field name="ngay"/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="gioi_tinh"/>
                                <field name="dien_thoai"/>
                                <field name="dia_chi"/>
                                <field name="tuoi"/>
                            </group>
                            <group>
                                <field name="ten_bacsi" string="Tên bác sĩ"/>
                                <field name="chan_doan"/>
                            </group>                            
                        </group>
                        <field name="thuoc_ids"/>
                        <group>
                            <group >
                                
                            </group>
                            <group>
                                <field name="phan_tram_giam_gia"/>
                                <field name="tong_gia"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="donhang_tree_view" model="ir.ui.view">
            <field name="name">donhang.tree.view</field>
            <field name="model">don.hang</field>
            <field name="arch" type="xml">

                <!-- Sắp xếp theo thứ tự giảm dần ngày tạo (mới -> cũ) -->
                <tree expand="1" string="Danh sách đơn hàng" default_order="create_date desc">
                    <field name="ma_donthuoc" string="Đơn"/>
                    <field name="ten_benhnhan"/>
                    <field name="ten_bacsi"/>
                    <field name="gioi_tinh"/>
                    <field name="dia_chi"/>
                    <field name="thuoc_ids"/>
                    <field name="dien_thoai" />
                    <field name="tuoi"/>
                    <field name="chan_doan"/>
                    <field name="ngay"/>
                    <field name="tong_gia"/>
                </tree>
            </field>
        </record>

        <!-- search, filter, group view -->
        <!-- view này sẽ được lưu vào đối tượng ir.ui.view -->
        <record id="view_search_donhang" model="ir.ui.view">
            <field name="name">view_search_donhang</field>
            <field name="model">don.hang</field>
            <field name="arch" type="xml">

                <!-- search -->
                <search string = "Search custom">

                    <!-- search -->
                    <field name="ma_donthuoc" string="Mã đơn hàng"/>
                    <field name="ten_benhnhan" string = "Tên khách hàng"/>
                    <field name="ten_bacsi" string="Tên bác sĩ"/>
                    <field name="ngay" string="Ngày"/>

                </search>


            </field>
        </record>

        <record id="action_donhang" model="ir.actions.act_window">
            <field name="name">Quản lý đơn hàng</field>
            <field name="type">ir.actions.act_window</field>

            <!-- res_model: Mô hình đại diện cho action_window này. -->
            <field name="res_model">don.hang</field>
            <!-- <field name="view_type">form</field> -->            <!-- Odoo 13 has removed this field -->

            <!-- view_ids: define specific view (view cụ thể) cho từng specific view_mode -->
            <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'tree', 'view_id': ref('donhang_tree_view')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('donhang_form_view')})]"/>

            <!-- search view -->
            <field name = "search_view_id" ref="view_search_donhang" />
        </record>

        <menuitem id="menu_donhang" name="Đơn Hàng" action="action_donhang" sequence="10" groups="base.group_user"/>
    </data>
</odoo>
