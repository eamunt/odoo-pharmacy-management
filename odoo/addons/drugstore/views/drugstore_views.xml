<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="my_drug_form_view" model="ir.ui.view">
            <field name="name">my.drug.form.view</field>
            <field name="model">my.drugstore</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Drug name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" placeholder="e.x Paracetamol"/>
                            </h1>
                            <label for="cus_id"/>
                            <h3>
                                <field name="cus_id"/>
                            </h3>
                        </div>
                        <group>
                            <group>
                                <field name="exp"/>
                                <field name="weight"/>
                            </group>
                            <group>
                                <field name="import_date"/>
                                <field name="type"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="general_information" string="General Information">
                                <group>
                                    <group>
                                        <field name="shortname"/>
                                    </group>
                                    <group>
                                        <label for="description" colspan="2"/>
                                        <field name="description" colspan="2" nolabel="1"/>
                                    </group>
                                </group>
                            </page>
                            <page name="additional_information" string="Additional Information">
                                <group>
                                    <group string="Image">
                                        <field name="drug_image" string="Drug's Image" widget="image"/>
                                    </group>
                                    <group string="Products">
                                        <field name="product_ids" widget="many2many_tags"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="my_drug_tree_view" model="ir.ui.view">
            <field name="name">my.drug.tree.view</field>
            <field name="model">my.drugstore</field>
            <field name="arch" type="xml">
                <tree string="Drugs" default_order="create_date desc">
                    <field name="name"/>
                    <field name="shortname"/>
                    <field name="exp"/>
                    <field name="weight"/>
                    <field name="import_date"/>
                    <field name="type"/>
                    <field name="cus_id"/>
                    <field name="product_ids"/>
                </tree>
            </field>
        </record>

        <!-- Đăng ký action -->
        <record id="action_my_drug" model="ir.actions.act_window">
            <field name="name">Drug</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">my.drugstore</field>
            <!-- <field name="view_type">form</field> -->            <!-- Odoo 13 has removed this field -->
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('my_drug_tree_view')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('my_drug_form_view')})]"/>
        </record>

        <!-- Đăng ký menu -->
        <menuitem id="menu_my_drug" name="Drugstore -_-" action="action_my_drug" sequence="10" groups="base.group_user"/>
    </data>
</odoo>